{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "node": true,
    "browser": false
  },
  "rules": {
    "generator-star-spacing": "off", // see https://github.com/babel/babel-eslint/issues/357
    "new-cap": "off",                // immutable
    "import/no-extraneous-dependencies": "off"
  }
}
